#include <SoftwareSerial.h>
#define RX 11
#define TX 10

SoftwareSerial mySerial(RX,TX); 
int i=0;  
char dataChar[32]={0};


void setup() {
  pinMode(RX,INPUT);
  pinMode(TX,OUTPUT);
  mySerial.begin(9600);
  Serial.begin(9600);
}

void loop() {


if(mySerial.available()){
  
  i=0;
  
  do{
    dataChar[i++]= mySerial.read();
    
   delay(3);
  }while(mySerial.available()>0);

  Serial.println("Donn√©es recus : ");
  Serial.println(dataChar);
  mySerial.println("Donnees recus : ");
  delay(1000);
  mySerial.println(dataChar);
  

  memset(dataChar, 0, 32);
  }

}
